{
  "name": "quipucords-ui",
  "version": "1.0.0",
  "description": "Quipucords UI",
  "author": "Red Hat",
  "license": "GPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/quipucords/quipucords-ui.git"
  },
  "bugs": {
    "url": "https://github.com/quipucords/quipucords-ui/issues"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/components/app.js",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/redux/index.js",
      "!src/redux/store.js",
      "!src/redux/middleware/**",
      "!src/redux/actions/index.js",
      "!src/redux/reducers/index.js",
      "!src/redux/selectors/index.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    }
  },
  "scripts": {
    "api:build": "run-s -l build:clean build:css build:js build:finish",
    "api:dev": "sh ./scripts/api.sh -p 5000 -t dev",
    "api:docs": "sh ./scripts/api.sh -t docs",
    "api:review": "sh ./scripts/api.sh -p 9443 -t review",
    "api:stage": "sh ./scripts/api.sh -p 5001 -t stage",
    "api:update": "npm run api:build; sh ./scripts/api.sh -t update",
    "build": "run-s -l build:clean build:version build:css build:js build:finish test:integration",
    "build:clean": "rm -rf -- \"$(pwd)\"/build",
    "build:css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/styles/index.scss -o src/styles/.css",
    "build:finish": "sh ./scripts/build.sh",
    "build:js": "react-scripts build",
    "build:rh": "sh -ac 'export REACT_APP_RH_BRAND=true && run-s -l build:clean build:css build:js build:finish'",
    "build:version": "sh ./scripts/version.sh",
    "release": "> ./CHANGELOG.md && standard-version",
    "start": "open http://localhost:5050/docs/api; run-p -l api:dev watch:css start:js",
    "start:js": "react-scripts start",
    "start:dev": "npm start",
    "start:review": "open https://localhost:9443/login/; npm run build && run-s -l api:review;",
    "start:stage": "open https://localhost:5001/login/; npm run api:build && run-p -l api:stage watch:css start:ui-stage",
    "start:ui-stage": "sh -ac '. ./.env.staging; react-app-rewired start'",
    "test": "run-s test:lint-js test:ci",
    "test:ci": "CI=true; react-scripts test --env=jsdom --coverage",
    "test:clearCache": "react-scripts test -- --clearCache",
    "test:dev": "run-s test:lint-js test:unit",
    "test:integration": "jest ./tests/*",
    "test:integration-dev": "jest ./tests/* --watchAll",
    "test:lint-js": "eslint --ext=js --ext=jsx src",
    "test:unit": "react-scripts test --env=jsdom",
    "watch:css": "npm run build:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/styles/index.scss -o src/styles/.css --watch --recursive"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^3.4.1",
    "classnames": "^2.2.6",
    "create-react-app": "^1.5.2",
    "detect-browser": "^3.0.1",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "npm-run-all": "^4.1.5",
    "node-sass-chokidar": "^1.3.3",
    "patternfly": "3.55.0",
    "patternfly-react": "^2.24.3",
    "prop-types": "^15.6.2",
    "react": "^16.8.4",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.4",
    "react-infinite-scroller": "^1.2.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.5",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^5.1.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moxios": "^0.4.0",
    "standard-version": "^5.0.1",
    "prettier": "^1.14.2",
    "react-app-rewired": "^1.5.0",
    "redux-mock-store": "^1.5.3",
    "swagger-parser": "^6.0.2",
    "swagger-ui-express": "^4.0.2",
    "write-file-webpack-plugin": "^4.4.0",
    "yamljs": "^0.3.0"
  },
  "resolutions": {
    "**/jest": "23.6.0"
  }
}
